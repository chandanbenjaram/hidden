<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="droid.samepinch.co.app">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <!-- Requires this permission to download RSS data from Picasa -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Requires this permission to check the network state       -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DesignDemo">

        <activity
            android:name="droid.samepinch.co.app.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PostDetailActivity" />

        <provider
            android:name="droid.samepinch.co.data.dao.SPContentProvider"
            android:authorities="droid.samepinch.co.app"
            android:exported="false"
            android:syncable="true" />

        <!--<provider-->
        <!--android:name="droid.samepinch.co.data.dao.IUserDAOImpl"-->
        <!--android:authorities="@string/content_authority_users"-->
        <!--android:exported="false"-->
        <!--android:syncable="true" />-->

        <service
            android:name=".helpers.intent.PostsPullService"
            android:exported="false"/>

    </application>

</manifest>
