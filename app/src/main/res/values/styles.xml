<resources>

    <style name="Theme.AppTheme" parent="Base.Theme.AppTheme">
    </style>

    <style name="Base.Theme.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_compat_margin</item>
        <item name="android:src">@drawable/ic_done</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppTheme">

    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.MyApp.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">?colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.MyApp.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/titleTextColor</item>
    </style>

    <style name="NotImplementedYet">
        <item name="android:textSize">@dimen/abc_text_size_headline_material</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/titleTextColor</item>
    </style>
    <style name="Title.Expanded" parent="Title">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="Title.collapsed" parent="Title">
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ViewText">
        <item name="android:textColor">@color/titleTextColor</item>
    </style>
    <style name="DrawerNameText" parent="ViewText">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00666666</item>
    </style>
    <style name="SP_TagTextStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">italic</item>
        <item name="android:color"> @color/blue_700</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
