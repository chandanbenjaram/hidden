<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <ViewSwitcher
        android:id="@+id/dot_wall_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp">

        <co.samepinch.android.app.helpers.widget.SIMView
            android:id="@+id/dot_wall_image"
            android:layout_width="@dimen/signup_avatar_size"
            android:layout_height="@dimen/signup_avatar_size" />

        <TextView
            android:id="@+id/dot_wall_image_txt"
            style="@style/SP_NAV_NAME"
            android:layout_width="@dimen/signup_avatar_size"
            android:layout_height="@dimen/signup_avatar_size"
            android:layout_gravity="center_horizontal|center" />
    </ViewSwitcher>

    <LinearLayout
        android:id="@+id/dot_about_pane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dot_wall_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name" />

        <TextView
            android:id="@+id/dot_wall_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="handle" />

        <TextView
            android:id="@+id/dot_wall_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="about"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_heart_list_2x" />

            <TextView
                android:id="@+id/dot_wall_followers_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="25dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_post__2x" />

            <TextView
                android:id="@+id/dot_wall_posts_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="25dp">

            <ImageView
                android:id="@+id/dot_wall_blog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_menu_about_2x"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="25dp">

            <ImageView
                android:id="@+id/dot_wall_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_edit_2x"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</merge>