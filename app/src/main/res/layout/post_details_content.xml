<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    ap="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:clipChildren="false"
    android:clipToPadding="false"
    card_view:cardElevation="0dp"
    card_view:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:id="@+id/layout_post_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/post_dot_with_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="BY XYZ"
            android:textColor="@color/blue_500" />

        <TextView
            android:id="@+id/post_vote_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:text="likes count"
            android:textColor="@color/grey_500"
            android:textSize="10dp"
            android:layout_alignBottom="@+id/post_dot_with_handle"
            android:layout_toLeftOf="@+id/post_views_count"
            android:layout_toStartOf="@+id/post_views_count" />

        <TextView
            android:id="@+id/post_views_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:text="#of views"
            android:textColor="@color/grey_500"
            android:textSize="10dp"
            android:layout_alignBottom="@+id/post_dot_with_handle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <View style="@style/Divider" android:layout_below="@+id/post_dot_with_handle"/>
        <LinearLayout
            android:id="@+id/post_details_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_dot_with_handle"
            android:paddingTop="5dp"
            android:orientation="vertical" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
