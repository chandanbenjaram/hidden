<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/Divider" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/avatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@drawable/avatar_border"
            android:clickable="true"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/avatar_name"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_corners"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/blue_500" />

        <TextView
            android:id="@+id/avatar_handle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@id/avatar"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/avatar"
            android:textColor="@color/grey_500"
            android:textSize="10dp"
            android:text="handle" />

        <TextView
            android:id="@+id/comment_upvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/avatar"
            android:layout_toLeftOf="@+id/comment_date"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:text="vote"
            android:drawableLeft="@drawable/icon_upvote_gray_1x"
            android:textColor="@color/grey_500"
            android:textSize="10dp"
            android:layout_marginRight="5dp" />


        <TextView
            android:id="@+id/comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/avatar"
            android:layout_toLeftOf="@+id/comment_menu"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:text="date"
            android:drawableLeft="@drawable/time_1x"
            android:textColor="@color/grey_500"
            android:textSize="10dp"
            android:layout_marginRight="5dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/comment_menu"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:paddingRight="7dp"
            android:gravity="center_vertical"
            android:background="@drawable/icon_more_2x"
            fresco:placeholderImageScaleType="fitCenter" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatar_handle"
            android:layout_toRightOf="@+id/avatar"
            android:layout_toEndOf="@+id/avatar"
            android:text="a comment"
            android:textColor="@color/grey_900" />
    </RelativeLayout>
</LinearLayout><!--</android.support.v7.widget.CardView>-->

