<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/bg_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/tag_edit_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/bg_container"
        android:layout_alignTop="@+id/bg_container"
        android:background="@null"
        android:padding="9dp"
        android:src="@drawable/tickmark_blue" />

    <ImageButton
        android:id="@+id/tag_edit_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tag_edit_save"
        android:background="@null"
        android:padding="9dp"
        android:src="@drawable/x_mark" />

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bg_container"
        android:layout_alignLeft="@+id/bg_container"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/bg_container"
        android:layout_marginBottom="99dp"
        card_view:cardBackgroundColor="#0Ae3f2fd"
        card_view:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/tag_options"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="test" />-->

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/tag_subscription_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="16dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>

